# ========================================
# DEMO MODE CONFIGURATION
# ⚠️  WARNING: ONLY FOR PRESENTATIONS
# ⚠️  NEVER USE IN PRODUCTION!
# ========================================

# Environment
NODE_ENV=development

# Demo Mode (Enable to bypass all security)
DEMO_MODE=true
DEMO_PHONE=0999999999
DEMO_PASSWORD=demo123

# Server
PORT=3000
API_URL=http://localhost:3000

# Database (use your local database)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=jecoplus
DB_USER=jecoplus
DB_PASSWORD=jecoplus_dev_2025
DB_SSL=false
DB_POOL_MAX=20

# Redis (optional for demo)
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT (use simple secrets for demo)
JWT_ACCESS_SECRET=demo-access-secret-for-presentation-only
JWT_REFRESH_SECRET=demo-refresh-secret-for-presentation-only
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# CORS (allow all for demo)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Logging
LOG_LEVEL=debug
LOG_FORMAT=dev

# Skip CSRF (already bypassed by DEMO_MODE)
SKIP_CSRF=true

# Rate Limiting (bypassed by DEMO_MODE)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=10

# OTP (not needed in demo mode)
OTP_EXPIRY_SECONDS=300
OTP_MAX_ATTEMPTS=3
OTP_COOLDOWN_SECONDS=60

# Firebase (not needed in demo mode, but set dummy values to avoid errors)
FIREBASE_PROJECT_ID=demo-project
FIREBASE_CLIENT_EMAIL=demo@example.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nDEMO\n-----END PRIVATE KEY-----"

# AWS S3 (not needed in demo mode)
AWS_REGION=ap-southeast-1
AWS_ACCESS_KEY_ID=demo
AWS_SECRET_ACCESS_KEY=demo
AWS_S3_BUCKET=jecoplus-demo

# AI Services (optional for demo)
AI_DEFAULT_PROVIDER=gemini
GEMINI_API_KEY=your-gemini-key-here

