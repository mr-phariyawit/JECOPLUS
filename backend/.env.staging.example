# JECO+ Backend - Staging Environment
# This file is a template. Actual values are stored in Google Secret Manager.

NODE_ENV=staging
PORT=3000

# Database (Cloud SQL)
DB_HOST=/cloudsql/jecoplus-staging:asia-southeast1:jecoplus-db
DB_PORT=5432
DB_NAME=jecoplus
DB_USER=jecoplus
DB_PASSWORD=<from-secret-manager>
DB_SSL=true

# Redis (Cloud Memorystore)
REDIS_HOST=10.x.x.x
REDIS_PORT=6379

# JWT Configuration
JWT_ACCESS_SECRET=<from-secret-manager>
JWT_REFRESH_SECRET=<from-secret-manager>
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Firebase Admin SDK
FIREBASE_PROJECT_ID=jecoplus-staging
# Service account credentials loaded via GOOGLE_APPLICATION_CREDENTIALS

# CORS
CORS_ORIGINS=https://jecoplus-staging.web.app,https://jecoplus-staging.firebaseapp.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100
